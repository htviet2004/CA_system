# =============================================================================
# CA System Environment Configuration
# =============================================================================
# SECURITY: Copy this file to .env and configure all values.
# NEVER commit .env to source control.
#
# Generate a secure SECRET_KEY with:
#   python -c "import secrets; print(secrets.token_urlsafe(50))"
#
# Generate a FERNET_SALT with:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
# =============================================================================

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================
# SECURITY: Must be set. Generate with command above.
SECRET_KEY=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Set to False in production
DEBUG=True

# SECURITY: Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# SECURITY: Salt for Fernet key derivation (recommended)
FERNET_SALT=

# SECURITY: Enable these in production (all require HTTPS)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# SECURITY: HSTS settings (enable in production after testing)
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# SECURITY: CSRF trusted origins (comma-separated URLs with scheme)
# Example: https://yourdomain.com,https://api.yourdomain.com
CSRF_TRUSTED_ORIGINS=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Set DB_ENGINE=mysql for MySQL, leave empty or sqlite3 for SQLite
DB_ENGINE=sqlite3
DB_NAME=ca_system
DB_USER=root
DB_PASSWORD=
DB_HOST=127.0.0.1
DB_PORT=3306

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================
# Environment identifier
DJANGO_ENV=development

# TSA URL for timestamping (optional, falls back to public TSAs)
TSA_URL=
